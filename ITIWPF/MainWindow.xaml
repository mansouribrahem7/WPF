<Window x:Class="ITIWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITIWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock  Grid.Row="0" x:Name="text" FontSize="50" TextAlignment="Center"  Text="{Binding Count}" />
        <Button Content="Click me" Grid.Row="1" FontSize="40" Name="clickButton" Height="80" Width="180" Click="changeCount" />
    </Grid>
</Window>
